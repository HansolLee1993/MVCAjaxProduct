
@{
    ViewBag.Title = "Simple jQuery Ajax";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}


<h2>@ViewBag.Title</h2>

<div>
    @Ajax.ActionLink("Click here to set the server time using Microsoft Ajax!",
                "ServerTimeAsPartialView",
        new AjaxOptions
        {
            HttpMethod = "GET",
            UpdateTargetId = "timeDisplayMsAjax",
            InsertionMode = InsertionMode.Replace,
            LoadingElementId = "loadingDisplay",
        })

</div>

<p style="color: orange;">Note that the controller action method will sleep for 2 seconds just so that you notice the animation.</p>

<div id="timeDisplayMsAjax">No Server Time</div>

<div id="loadingDisplay" style="display: none">
    <img src="@Url.Content("~/Content/Images/ajax-loader.gif")"
         alt="loading image" />
</div>


