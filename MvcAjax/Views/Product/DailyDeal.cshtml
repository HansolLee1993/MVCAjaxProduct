
@{
    ViewBag.Title = "Daily Deal";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}

<h2>@ViewBag.Title</h2>

<div>
    @Ajax.ActionLink("Click here to see today's special",
        "DailyDealPartial", // action
    new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "dailyDealDetail",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "loadingDisplay",

    })
</div>

<p style="color: orange;">Note that the controller action method will sleep for 2 seconds just so that you notice the animation.</p>

<div id="dailyDealDetail"></div>

<div id="loadingDisplay" style="display: none">
    <img src="@Url.Content("~/Content/Images/ajax-loader.gif")" alt="loading image" />
</div>

