@model IEnumerable<MvcAjax.Models.NW.Product>

@{
    ViewBag.Title = "Product Table";
}
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
}

<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("ProductTable", "Product",
    new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "productTable",
        OnFailure = "searchFailed"
    }))
{
    <input id="searchBox" type="text" name="query" />
    <input type="submit" value="search" />
}

<div id="productTable">
    @Html.Partial("_ProductTablePartial", Model)
</div>
